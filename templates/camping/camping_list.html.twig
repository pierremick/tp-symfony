{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<div class="heading">
    <div class="container">
        <h1>{{ page_title }}</h1>
    </div>
</div>
<div class="main-content">
    <div class="container">
        <div class="my-5">
            {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    {{ form_widget(form.type) }}
                </div>
                <div class="col">
                    {{ form_widget(form.capacity) }}
                </div>
                <div class="col">
                    {{ form_widget(form.submit) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="row">
        {% for position in positions %}
            <div class="col-md-3 pb-3">
                <div class="card">
                    {% if position.image %}
                        <img src="/upload/images/positions/{{ position.image }}" class="card-img-top" alt="photo de {{ position.name }}">
                    {% else %}
                        <img src="/upload/images/positions/default-mobil-home.webp" class="card-img-top" alt="photo de {{ position.name }}">
                    {% endif %}
                    <div class="card-body">
                        <h3 class="card-title">{{ position.name }}</h3>
                        <p class="card-text">
                            <strong>{{ position.type.price/100 }} €</strong> pour {{ position.type.capacity }} personnes, du 05 mai au 20 juin<br>
                            <strong>{{ position.type.price/100*1.15 }} €</strong> pour {{ position.type.capacity }} personnes, du 1er septembre au 10 octobre<br>
                        </p>
                        <div>
                            <a class="btn btn-primary" href="{{ path('camping_place', {'type': position.type.slug, 'slug': position.slug}) }}">Détails</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
