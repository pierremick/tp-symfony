{% extends 'base.html.twig' %}

{% block title %}{{ position.name }}{% endblock %}

{% block body %}
    <div class="main-content my-5">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>{{ position.name }}</h1>
                    <p>{{ position.description }}</p>
                </div>
                <div class="col-md-5">
                    <form method="post" action="{{ path('app_booking_new', {'id': position.id}) }}">
                        {{ form_widget(form.checkin) }}
                        {{ form_widget(form.checkout) }}
                        <button type="submit">Vérifier la disponibilité</button>
                    </form>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
