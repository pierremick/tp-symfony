{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ page_title }}</h1>
    <ul>
        {% for position in positions %}
            <li class="pb-3">
                {{ position.name }}<br>
                {{ position.type.name }}<br>
                {{ position.description }}<br>
                {{ position.type.capacity }}
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}