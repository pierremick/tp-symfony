{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ page_title }}</h1>
    <div>
        {{ form_start(PositionFilterType) }}
        {{ form_row(PositionFilterType.type) }}
        {{ form_row(PositionFilterType.capacity) }}
        {{ form_row(PositionFilterType.submit) }}
        {{ form_end(PositionFilterType) }}
    </div>
    <ul>
        {% for position in positions %}
            <li class="pb-3">
                {{ position.name }}<br>
                {{ position.type.name }}<br>
                {{ position.description }}<br>
                capacit√© maximale : {{ position.type.capacity }}
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}