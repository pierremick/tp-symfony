{% extends 'base.html.twig' %}

{% block title %}{{ position.name }}{% endblock %}

{% block body %}
    <div class="main-content my-5">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>{{ position.name }}</h1>
                    <p>{{ position.description }}</p>
                </div>
                <div class="col-md-5">
                    <h3>Vérifier la disponibilité</h3>
                    {% if app.session.flashbag.has('error') %}
                    <div class="alert alert-danger">{{ app.session.flashbag.get('error')[0] }}</div>
                    {% endif %}

                    {% if app.session.flashbag.has('success') %}
                        <div class="alert alert-success">{{ app.session.flashbag.get('success')[0] }}</div>
                    {% endif %}

                    {{ form_start(form) }}
                    {{ form_row(form.checkin) }}
                    {{ form_row(form.checkout) }}
                    {{ form_row(form.submit) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
