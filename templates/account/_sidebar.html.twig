<!-- START SIDEBAR -->
<div class="card flex-grow-1 mb-5">
    <div class="card-body">
        <!-- Avatar -->
        <div class="d-none d-lg-block text-center mb-5">
      <div class="avatar avatar-xxl avatar-circle mb-3">
        <img class="avatar-img" src="/upload/avatar/{{ app.user.avatar }}" alt="Avatar {{ app.user.firstname }} {{ app.user.lastname }}">
        <img class="avatar-status avatar-lg-status" src="/svg/illustrations/top-vendor.svg" alt="Image Description" data-bs-toggle="tooltip" data-bs-placement="top" title="Verified user">
      </div>

      <h4 class="card-title mb-0">{{ app.user.firstname }} {{ app.user.lastname }}</h4>
      <p class="card-text small">{{ app.user.email }}</p>
    </div>
        <!-- End Avatar -->

        <!-- MON COMPTE -->
        <!-- span class="text-cap mt-3">Mon compte</span -->
        <ul class="nav nav-sm nav-tabs nav-vertical mb-4">
            <li class="nav-item">
                <a class="nav-link{% if app.request.get('_route') == 'account' %} active{% endif %}" href="{{ path('account') }}">
                    <i class="bi-person-badge nav-icon"></i> Accueil
                </a>
            </li>
            <!-- If User is ADMIN -->
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_admin') }}" target="_blank">
                        <i class="bi-credit-card nav-icon"></i> Admin
                    </a>
                </li>
            {% endif %}
            <!-- End User is ADMIN -->
            <!-- If User is OWNER -->
            {% if app.user.isOwner %}
                <li class="nav-item">
                    <a class="nav-link " href="#">
                        <i class="bi-credit-card nav-icon"></i> Mobilehomes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="#">
                        <i class="bi-credit-card nav-icon"></i> Réservations
                        <span class="badge bg-success text-light rounded-pill nav-link-badge">+2</span>
                    </a>
                </li>
            {% endif %}
            <!-- End User is OWNER -->
        </ul>
        <span class="text-cap mt-3">Mon compte</span>
        <ul class="nav nav-sm nav-tabs nav-vertical mb-4">
            <li class="nav-item">
                <a class="nav-link{% if app.request.get('_route') == 'account_info' %} active{% endif %}" href="{{ path('account_info') }}">
                    <i class="bi-person-badge nav-icon"></i> Informations
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link{% if app.request.get('_route') == 'account_change_password' %} active{% endif %}" href="{{ path('account_change_password') }}">
                    <i class="bi-shield-shaded nav-icon"></i> Securité
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="#">
                    <i class="bi-sliders nav-icon"></i> Préférences
                </a>
            </li>
        </ul>
        <!-- End MON COMPTE -->
        <!-- TEAM ADMIN -->
        {% if app.user.isTeam %}
            <span class="text-cap mt-4">Administration</span>
            <ul class="nav nav-sm nav-tabs nav-vertical">
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'team_booking' %} active{% endif %}" href="{{ path('team_booking') }}">
                        <i class="bi-credit-card nav-icon"></i> Booking
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'team_positions' %} active{% endif %}" href="{{ path('team_positions') }}">
                        <i class="bi-credit-card nav-icon"></i> Emplacements
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'team_owner' %} active{% endif %}" href="{{ path('team_owner') }}">
                        <i class="bi-geo-alt nav-icon"></i> Propriétaires
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'team_customers' %} active{% endif %}" href="{{ path('team_customers') }}">
                        <i class="bi-credit-card nav-icon"></i> Clients
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'team_invoice' %} active{% endif %}" href="{{ path('team_invoice') }}">
                        <i class="bi-credit-card nav-icon"></i> Factures
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if app.request.get('_route') == 'team' %} active{% endif %}" href="{{ path('team') }}">
                        <i class="bi-people nav-icon"></i> Équipe
                    </a>
                </li>
            </ul>
        {% endif %}
        <!-- End TEAM ADMIN -->
        <div class="d-lg-none">
            <div class="dropdown-divider"></div>
            <!-- List -->
            <ul class="nav nav-sm nav-tabs nav-vertical">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}">
                        <i class="bi-box-arrow-right nav-icon"></i> Log out
                    </a>
                </li>
            </ul>
            <!-- End List -->
        </div>
        <!-- End Nav -->
    </div>
</div>
<!-- END SIDEBAR -->
