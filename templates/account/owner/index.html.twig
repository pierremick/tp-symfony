{% extends 'account.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <!-- Breadcrumb -->
    <div class="navbar-dark bg-dark" style="background-image: url(/svg/components/wave-pattern-light.svg);">
        <div class="container content-space-1 content-space-b-lg-3">
            <div class="row align-items-center">
                <div class="col">
                    <div class="d-none d-lg-block">
                        <h1 class="h2 text-white">{{ page_title }}</h1>
                    </div>

                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-light mb-0">
                            <li class="breadcrumb-item">mon compte</li>
                            <li class="breadcrumb-item active" aria-current="page">l'équipe</li>
                        </ol>
                    </nav>
                    <!-- End Breadcrumb -->
                </div>
                <!-- End Col -->

                <div class="col-auto">
                    <div class="d-none d-lg-block">
                        <a class="btn btn-soft-light btn-sm" href="{{ path('logout') }}">se déconnecter</a>
                    </div>
                    <!-- Responsive Toggle Button -->
                    <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarNav" aria-controls="sidebarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-default">
                <i class="bi-list"></i>
              </span>
                        <span class="navbar-toggler-toggled">
                <i class="bi-x"></i>
              </span>
                    </button>
                    <!-- End Responsive Toggle Button -->
                </div>
                <!-- End Col -->
            </div>
            <!-- End Row -->
        </div>
    </div>
    <!-- End Breadcrumb -->

    <!-- Content -->
    <div id="account-team" class="container content-space-1 content-space-t-lg-0 content-space-b-lg-2 mt-lg-n10">
        <div class="row">
            <div id="account-team-sidebar" class="col-lg-3">
                <div class="navbar-expand-lg navbar-light">
                    <div id="sidebarNav" class="collapse navbar-collapse navbar-vertical">
                        {% include 'account/_sidebar.html.twig' %}
                    </div>
                </div>
            </div>
            <div  id="account-team-content" class="col-lg-9">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-header-title">{{ page_title }}</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-borderless table-thead-bordered table-nowrap table-align-middle card-table">
                            <thead class="thead-light">
                            <tr>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Access</th>
                                <th style="width: 5%;"></th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <img class="avatar avatar-sm avatar-circle" src="/upload/avatar/{{ app.user.avatar }}" alt="Avatar {{ app.user.firstname }} {{ app.user.lastname }}}">
                                            </div>

                                            <div class="flex-grow-1 ms-3">
                                                <a class="d-inline-block link-dark" href="#">
                                                    <h6 class="text-hover-primary mb-0">{{ app.user.firstname }} {{ app.user.lastname }} <img class="avatar avatar-xss ms-1" src="/svg/illustrations/top-vendor.svg" alt="Image Description" data-bs-toggle="tooltip" data-bs-placement="top" title="Verified user"></h6>
                                                </a>
                                                <small class="d-block">{{ app.user.email }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <!-- Select -->
                                        <div class="tom-select-custom">
                                            <select class="js-select form-select form-select-sm">
                                                <option value="memberStatusLabelActive1" selected data-option-template='<span class="d-flex align-items-center"><span class="legend-indicator bg-success me-2"></span> Active</span>'>Active</option>
                                                <option value="memberStatusLabelInactive1" data-option-template='<span class="d-flex align-items-center"><span class="legend-indicator bg-danger me-2"></span> Inactive</span>'>Inactive</option>
                                            </select>
                                        </div>
                                        <!-- End Select -->
                                    </td>
                                    <td>
                                        <!-- Select -->
                                        <div class="tom-select-custom">
                                            <select class="js-select form-select form-select-sm">
                                                <option value="memberStatusLabelAdmin1" selected>Admin</option>
                                                <option value="memberStatusLabelCanEdit1">Can edit</option>
                                                <option value="memberStatusLabelCanView1">Can view</option>
                                            </select>
                                        </div>
                                        <!-- End Select -->
                                    </td>
                                    <td>
                                        <a class="text-body" href="javascript:;" data-bs-toggle="tooltip" data-bs-placement="top" title="Locked">
                                            <i class="bi-lock-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
